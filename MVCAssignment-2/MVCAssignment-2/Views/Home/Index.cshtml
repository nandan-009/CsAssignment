@model MVCAssignment_2.Models.Rent

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:rebeccapurple">Rent Calculation</h1>


<form asp-action="Calculate">
    <table>
        <tr>
            <th>Name :</th>
            <td>
                <input asp-for="Name" class="form-control" />
            </td>
        </tr>
        <tr>
            <th>Hall Owner :</th>
            <td>
                <input asp-for="HallOwner" class="form-control" />
            </td>
        </tr>
        <tr>
            <th>Cost Per Day :</th>
            <td>
                <input asp-for="CostPerDay" class="form-control" />
            </td>
        </tr>
        <tr>
            <th>Start Date :</th>
            <td>
                <input type="date" asp-for="StartDate" class="form-control" />
            </td>
        </tr>
        <tr>
            <th>End Date :</th>
            <td>
                <input type="date" asp-for="EndDate" class="form-control" />
            </td>
        </tr>

    </table>
    <input style="color:rebeccapurple" type="submit" value="Calculate" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

